<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.carmenandroid.PedirPistaActivity"
    tools:ignore="RtlHardcoded" >
   

    <Button
        android:id="@+id/lugar3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lugar1"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
       />

    <Button
        android:id="@+id/lugar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/lugar3"
        android:layout_marginTop="14dp"
        />

    <Button
        android:id="@+id/lugar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lugar1"
        android:layout_alignRight="@+id/lugar1"
        android:layout_below="@+id/lugar1"
        android:layout_marginTop="19dp"
       />

    <TextView
        android:id="@+id/paisActual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/pais" />

    <Button
        android:id="@+id/viajar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/orden"
        android:onClick="irAViajar"
        android:text="@string/viajar" />

    <Button
        android:id="@+id/orden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/viajar"
        android:layout_alignBottom="@+id/viajar"
        android:layout_alignParentLeft="true"
        android:onClick="pedirOrden"
        android:text="@string/orden" />

     <TextView
         android:id="@+id/ordenDeArresto"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@+id/orden"
         android:layout_alignParentLeft="true"
         android:layout_marginBottom="24dp"
         android:hint="@string/arresto" />
 
</RelativeLayout>
